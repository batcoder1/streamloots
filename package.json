{
  "name": "streamloots-hexagonal",
  "version": "1.0.0",
  "description": "cards",
  "main": "dist/index.js",
  "scripts": {
    "prebuild": "tslint -c tslint.json -p tsconfig.json --fix",
    "copy-config": "cp -R ./config/ ./dist/",
    "build": "tsc -p tsconfig.build.json && npm run copy-config",
    "delete-dist": "rm -rf dist",
    "build-ts": "npm run delete-dist && npm run build",
    "serve": "npm run build-ts & npm run start",
    "prestart": "npm run build-ts",
    "start": "NODE_ENV=dev  node dist/src/main.js",
    "start:dev": "NODE_ENV=dev nodemon",
    "test": "NODE_ENV=test ts-mocha -p tsconfig.json --opts ./mocha.opts --timeout 10000 --exit"
  },
  "author": "Enrique Rubio",
  "license": "ISC",
  "dependencies": {
    "@types/config": "0.0.37",
    "@types/cookie-parser": "^1.4.2",
    "@types/express": "^4.17.6",
    "body-parser": "^1.19.0",
    "config": "^3.3.3",
    "cookie-parser": "^1.4.5",
    "crypto": "^1.0.1",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "helmet": "^4.2.0",
    "jwt-simple": "^0.5.6",
    "logger": "0.0.1",
    "mongoose": "^5.11.7",
    "nodemailer": "^6.4.6",
    "tslib": "^2.0.3",
    "winston": "^3.2.1",
    "winston-daily-rotate-file": "^4.1.0"
  },
  "devDependencies": {
    "@types/body-parser": "^1.17.1",
    "@types/chai": "^4.2.1",
    "@types/chai-as-promised": "^7.1.2",
    "@types/lodash": "^4.14.71",
    "@types/mocha": "^5.2.7",
    "@types/mongodb": "^3.5.8",
    "@types/node": "^13.13.35",
    "@types/nodemailer": "^6.4.0",
    "@types/sinon": "^7.0.13",
    "axios": "^0.21.0",
    "chai": "^4.2.0",
    "lodash": "^4.17.20",
    "mocha": "^6.2.0",
    "nodemon": "^1.19.2",
    "prettier": "2.0.4",
    "ts-mocha": "^6.0.0",
    "ts-node": "^8.10.2",
    "tslint": "^6.1.1",
    "typescript": "^3.8.3",
    "typescript-tslint-plugin": "^0.5.5"
  }
}
