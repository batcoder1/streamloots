{
  "name": "streamloots-hexagonal",
  "version": "1.0.0",
  "description": "cards",
  "main": "dist/index.js",
  "scripts": {
    "prebuild": "eslint -c .eslintrc.js --ext .ts ./src",
    "copy-config": "cp -R ./config/ ./dist/",
    "build": "tsc -p tsconfig.build.json && npm run copy-config",
    "delete-dist": "rm -rf dist",
    "build-ts": "npm run delete-dist && npm run build",
    "serve": "npm run build-ts & npm run start",
    "prestart": "npm run build-ts",
    "start:dev": "NODE_ENV=dev nodemon",
    "start:test": "NODE_ENV=test nodemon",
    "test": "NODE_ENV=test ts-mocha -p tsconfig.json --opts ./mocha.opts --timeout 10000 --exit",
    "load:cards": "NODE_ENV=test ts-node ./stress/load-cards.ts",
    "start:stress": "NODE_ENV=test ts-node ./stress/stress.ts",
    "start": "pm2-runtime --raw processes.json",
    "postinstall": "$(yarn bin)/pm2 install typescript",
    "stress": "npm run start:stress",
    "lint": "eslint -c .eslintrc.js --ext .ts ./src --fix",
    "docker:build": "sudo docker build --build-arg DOCKER_ENV=production -t streamloots .",
    "docker:start": "sudo docker run -p 9091:9091 streamloots",
    "docker:mongo": "sudo docker run -e MONGO_INITDB_ROOT_USERNAME=streamUser -e MONGO_INITDB_ROOT_PASSWORD=s1am#p6$14 -e MONGO_INITDB_DATABASE=streamloots -d --name mongoloots mongo:latest "
  },
  "author": "Enrique Rubio",
  "license": "ISC",
  "dependencies": {
    "@types/config": "0.0.37",
    "@types/cookie-parser": "^1.4.2",
    "@types/express": "^4.17.6",
    "body-parser": "^1.19.0",
    "config": "^3.3.3",
    "cookie-parser": "^1.4.5",
    "crypto": "^1.0.1",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "helmet": "^4.2.0",
    "hot-shots": "^8.2.1",
    "jwt-simple": "^0.5.6",
    "logger": "0.0.1",
    "mongoose": "^5.11.7",
    "nodemailer": "^6.4.6",
    "pm2": "^4.5.1",
    "tslib": "^2.0.3",
    "winston": "^3.2.1",
    "winston-daily-rotate-file": "^4.1.0"
  },
  "devDependencies": {
    "@types/body-parser": "^1.17.1",
    "@types/chai": "^4.2.1",
    "@types/chai-as-promised": "^7.1.2",
    "@types/command-exists": "^1.2.0",
    "@types/lodash": "^4.14.71",
    "@types/mocha": "^5.2.7",
    "@types/mongodb": "^3.5.8",
    "@types/node": "^13.13.35",
    "@types/nodemailer": "^6.4.0",
    "@types/sinon": "^7.0.13",
    "@typescript-eslint/eslint-plugin": "^4.11.0",
    "@typescript-eslint/parser": "^4.11.0",
    "axios": "^0.21.0",
    "chai": "^4.2.0",
    "command-exists": "^1.2.9",
    "eslint": "^7.16.0",
    "eslint-config-prettier": "^7.1.0",
    "eslint-plugin-jsdoc": "^30.7.9",
    "eslint-plugin-prefer-arrow": "^1.2.2",
    "eslint-plugin-prettier": "^3.3.0",
    "mocha": "^6.2.0",
    "nodemon": "^1.19.2",
    "prettier": "2.0.4",
    "ts-mocha": "^6.0.0",
    "ts-node": "^8.10.2",
    "typescript": "^3.8.3",
    "typescript-tslint-plugin": "^0.5.5"
  }
}
